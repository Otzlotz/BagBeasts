        font-family: 'Consolas', monospace;
    }

    .battle-controls {
        height: 250px; /* Fixierte Höhe für das UI-Panel */
        background: #f0f0f0;
        padding: 15px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        border-top: 4px solid #ccc;
        box-shadow: 0 -5px 15px rgba(0,0,0,0.1);
        z-index: 10;
    }

    /* --- SETUP UI --- */
    .setup-screen {
        grid-column: span 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: var(--bg-dark);
        gap: 40px;
    }

    .big-upload-btn {
        width: 280px;
        height: 200px;
        border: 4px dashed #7f8c8d;
        border-radius: 20px;
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.3s;
    }

        .big-upload-btn:hover {
            background: #34495e;
            transform: scale(1.02);
        }

        .big-upload-btn.is-ready {
            border-style: solid;
            border-color: var(--ready-green);
            background: #1e3d2b;
        }

    /* --- POKEMON POSITIONING --- */
    .side {
        position: relative;
        z-index: 1;
        height: 100%;
    }

    .status-card {
        position: absolute;
        background: rgba(255,255,255,0.9);
        padding: 12px;
        border-radius: 10px;
        width: 260px;
        border: 3px solid #555;
        box-shadow: 5px 5px 0 rgba(0,0,0,0.2);
    }

    .opponent-status {
        top: 40px;
        left: 40px;
    }

    .player-status {
        bottom: 180px;
        right: 40px;
    }

    .sprite-container img {
        width: 250px;
        image-rendering: pixelated;
    }

    .opponent-sprite {
        position: absolute;
        top: 15%;
        right: 10%;
    }

    .player-sprite {
        position: absolute;
        bottom: 5%;
        left: 10%;
    }

    /* --- BUTTONS --- */
    .action-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .btn-action {
        padding: 15px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        color: white;
        cursor: pointer;
        text-transform: uppercase;
    }

    .attack {
        background: #c0392b;
        box-shadow: 0 4px #922b21;
    }

        .attack:active {
            transform: translateY(2px);
            box-shadow: 0 2px #922b21;
        }

    .switch {
        background: #2980b9;
        box-shadow: 0 4px #1f6391;
    }

    .move-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        flex: 1;
    }

    .btn-move {
        background: white;
        border: 2px solid #bdc3c7;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-move:hover {
            background: #ecf0f1;
            border-color: #7f8c8d;
        }

    .hp-bar-container {
        height: 15px;
        background: #444;
        border-radius: 10px;
        border: 2px solid #222;
        overflow: hidden;
        margin: 8px 0;
    }

    .hp-bar {
        height: 100%;
        transition: width 0.5s ease-out;
    }

    .hp-green {
        background: #2ecc71;
    }

    .hp-yellow {
        background: #f1c40f;
    }

    .hp-red {
        background: #e74c3c;
    }

    .anim-shake {
        animation: shake 0.4s ease-in-out;
    }
    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-15px);
        }

        75% {
            transform: translateX(15px);
        }
    }
</style>

@code {
    private BattleTeam PlayerTeam;
    private BattleTeam OpponentTeam;
    private List<string> BattleLog = new();
    private string PlayerAnimationClass = "";
    private string OpponentAnimationClass = "";
    private string UploadError = "";

    private async Task HandleFileUpload(InputFileChangeEventArgs e, bool isPlayer)
    {
        try
        {
            UploadError = "";
            var file = e.File;
            if (file.Size > 1024 * 1024) { UploadError = "Datei zu groß (>1MB)"; return; }

            using var stream = file.OpenReadStream();
            using var reader = new StreamReader(stream);
            var json = await reader.ReadToEndAsync();

            var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
            // Hinweis: Ich nutze hier direkt List<Pokemon>, passe es ggf. an deine TeamBeastData an
            var importedPokemons = JsonSerializer.Deserialize<List<Pokemon>>(json, options);

            if (importedPokemons != null && importedPokemons.Any())
            {
                var newTeam = new BattleTeam { Pokemons = importedPokemons, ActiveIndex = 0 };
                if (isPlayer) PlayerTeam = newTeam; else OpponentTeam = newTeam;
                BattleLog.Add($"{(isPlayer ? "Spieler" : "Gegner")} Team erfolgreich geladen.");
            }
        }
        catch (Exception ex)
        {
            UploadError = "Fehler beim Parsen: " + ex.Message;
        }
    }

    private async Task OnApplyDamage(bool toOpponent, int amount)
    {
        if (toOpponent && OpponentTeam != null)
        {
            OpponentAnimationClass = "anim-shake";
            OpponentTeam.Active.CurrentHp = Math.Max(0, OpponentTeam.Active.CurrentHp - amount);
            BattleLog.Add($"{OpponentTeam.Active.Name} wurde getroffen! (-{amount} KP)");
        }
        else if (PlayerTeam != null)
        {
            PlayerAnimationClass = "anim-shake";
            PlayerTeam.Active.CurrentHp = Math.Max(0, PlayerTeam.Active.CurrentHp - amount);
            BattleLog.Add($"{PlayerTeam.Active.Name} wurde getroffen!");
        }

        StateHasChanged();
        await Task.Delay(500);
        OpponentAnimationClass = "";
        PlayerAnimationClass = "";
    }

    private string GetHpColor(Pokemon p)
    {
        float pct = (float)p.CurrentHp / p.MaxHp;
        if (pct > 0.5) return "hp-green";
        if (pct > 0.2) return "hp-yellow";
        return "hp-red";
    }

    private int CalculateHpPercentage(Pokemon p) => (int)((float)p.CurrentHp / p.MaxHp * 100);

    // Hilfsklassen
    public class Pokemon
    {
        public string Name { get; set; } = "Unbekannt";
        public int Level { get; set; } = 50;
        public int CurrentHp { get; set; } = 100;
        public int MaxHp { get; set; } = 100;
        public string SpriteUrl { get; set; } = "";
        public string Status { get; set; } = "";
    }

    public class BattleTeam
    {
        public List<Pokemon> Pokemons { get; set; } = new();
        public int ActiveIndex { get; set; }
        public Pokemon Active => Pokemons[ActiveIndex];
    }
}