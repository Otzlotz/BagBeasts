        background-position: center;
        z-index: 0;
    }

    /* --- SIDEBAR & LOG FIX --- */
    .battle-sidebar {
        display: flex;
        flex-direction: column;
        background: #fff;
        height: 100%;
        border-left: 4px solid #444;
    }

    .log-container {
        flex: 1; /* Nimmt den restlichen Platz ein */
        overflow-y: scroll;
        padding: 15px;
        background: white;
        color: #333;
        display: flex;
        flex-direction: column;
        min-height: 0; /* WICHTIG: Erlaubt Flex-Kindern zu schrumpfen/scrollen */
    }

    .log-entry {
        padding: 8px;
        border-bottom: 1px solid #eee;
