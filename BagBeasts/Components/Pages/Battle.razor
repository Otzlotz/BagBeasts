@page "/battle"
@using System.Text.Json
@rendermode InteractiveServer

<div class="battle-wrap">
    <div class="battle-container">
        @if (PlayerTeam == null || OpponentTeam == null)
        {
            <div class="setup-screen">
                <h2 class="setup-title">Pokémon Battle Setup</h2>
                <div class="upload-grid">
                    <label class="big-upload-btn @(PlayerTeam != null ? "is-ready" : "")">
                        <InputFile OnChange="@(e => HandleFileUpload(e, true))" hidden />
                        <div class="btn-content">
                            <span class="icon">@(PlayerTeam != null ? "✅" : "👤")</span>
                            <span class="label-text">Spieler Team</span>
                            <span class="sub-text">@(PlayerTeam != null ? "Team geladen" : "JSON Datei wählen")</span>
                        </div>
                    </label>

                    <label class="big-upload-btn @(OpponentTeam != null ? "is-ready" : "")">
                        <InputFile OnChange="@(e => HandleFileUpload(e, false))" hidden />
                        <div class="btn-content">
                            <span class="icon">@(OpponentTeam != null ? "✅" : "👹")</span>
                            <span class="label-text">Gegner Team</span>
                            <span class="sub-text">@(OpponentTeam != null ? "Team geladen" : "JSON Datei wählen")</span>
                        </div>
                    </label>
                </div>
            </div>
        }
        else
        {
            <div class="battle-scene">
                <div class="scene-background"></div>

                <div class="side opponent-side">
                    <div class="status-card opponent-status">
                        <div class="info">
                            <span class="name">@OpponentTeam.Active.Name</span>
                            <span class="level">Lv. @OpponentTeam.Active.Level</span>
                        </div>
                        <div class="hp-bar-container">
                            <div class="hp-bar @GetHpColor(OpponentTeam.Active)"
                                 style="width: @CalculateHpPercentage(OpponentTeam.Active)%"></div>
                        </div>
                    </div>
                    <div class="sprite-container opponent-sprite @OpponentAnimationClass">
                        <img src="@OpponentTeam.Active.SpriteUrl" alt="Opponent" />
                    </div>
                </div>

                <div class="side player-side">
                    <div class="sprite-container player-sprite @PlayerAnimationClass">
                        <img src="@PlayerTeam.Active.SpriteUrl" alt="Player" />
                    </div>
                    <div class="status-card player-status">
                        <div class="info">
                            <span class="name">@PlayerTeam.Active.Name</span>
                            <span class="level">Lv. @PlayerTeam.Active.Level</span>
                        </div>
                        <div class="hp-bar-container">
                            <div class="hp-bar @GetHpColor(PlayerTeam.Active)"
                                 style="width: @CalculateHpPercentage(PlayerTeam.Active)%"></div>
                        </div>
                        <div class="hp-text">@PlayerTeam.Active.CurrentHp / @PlayerTeam.Active.MaxHp</div>
                    </div>
                </div>
            </div>

            <div class="battle-sidebar">
                <div class="log-container">
                    @foreach (var entry in BattleLog)
                    {
                        <div class="log-entry">@entry</div>
                    }
                </div>

                <div class="battle-controls">
                    <div class="action-row">
                        <button class="btn-action attack" @onclick="@(() => OnApplyDamage(true, 20))">Angriff</button>
                        <button class="btn-action switch" @onclick="@(() => { /* Logik */ })">Wechseln</button>
                    </div>
                    <div class="move-grid">
                        <button class="btn-move">Move 1</button>
                        <button class="btn-move">Move 2</button>
                        <button class="btn-move">Move 3</button>
                        <button class="btn-move">Move 4</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
