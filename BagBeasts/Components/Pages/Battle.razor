        --sidebar-width: 350px;
        --bg-dark: #2c3e50;
        --accent-blue: #3498db;
        --ready-green: #27ae60;
        --battle-height: 750px;
    }

    .battle-wrap {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 95vh;
        background: #111;
    }

    .battle-container {
        display: grid;
        grid-template-columns: 1fr var(--sidebar-width);
        width: 95%;
        max-width: 1300px;
        height: var(--battle-height);
        background: #222;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0 50px rgba(0,0,0,0.8);
    }

    /* --- BACKGROUND FIX --- */
    .battle-scene {
        position: relative;
        background: #87CEEB; /* Fallback */
