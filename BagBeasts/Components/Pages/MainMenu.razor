@page "/MainMenu"
@using BagBeasts.src.Hashfunction;
@using BagBeasts.src.Database
@using BagBeasts.Entities
@inject NavigationManager Nav
@inject IJSRuntime JS
@rendermode InteractiveServer


<div class="page">
    <div class="main-layout">
        <div class="menu-container">
            <h2>Men√º</h2>
            <div class="button-group">
                <button class="menu-button" @onclick="btnCreatorClick">Team erstellen</button>
                <button class="menu-button" @onclick="btnBattleClick">K√§mpfen!</button>
            </div>
        </div>

        @if (currentUser != null)
        {
            <div class="user-stats">
                <h3 class="stats-title">Deine Bilanz</h3>
                <div class="stats-content">
                    <div class="stat-box wins">
                        <span class="stat-label">üèÜ Siege</span>
                        <span class="stat-value">@(currentUser.Wins ?? 0)</span>
                    </div>
                    <div class="stat-box losses">
                        <span class="stat-label">üíÄ Niederlagen</span>
                        <span class="stat-value">@(currentUser.Loses ?? 0)</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .main-layout {
        display: flex;
        gap: 30px;
        align-items: stretch;
    }

    .user-stats {
        background: #2c3e50;
        padding: 25px;
        border-radius: 12px;
        color: white;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        min-width: 250px;
        border: 2px solid #34495e;
    }

    .stats-title {
        font-size: 1.5rem;
        text-align: center;
        margin-top: 0;
        margin-bottom: 20px;
        color: #f1c40f;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 2px solid rgba(255,255,255,0.1);
        padding-bottom: 10px;
    }

    .stats-content {
        display: flex;
        flex-direction: column;
        gap: 15px;
        flex: 1;
        justify-content: center;
    }

    .stat-box {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        border-radius: 10px;
        background: rgba(0,0,0,0.3);
        border: 1px solid rgba(255,255,255,0.05);
        transition: transform 0.2s;
    }

    .stat-box:hover {
        transform: scale(1.02);
        background: rgba(0,0,0,0.4);
    }

    .stat-label {
        font-size: 1.1rem;
        font-weight: 600;
        color: #bdc3c7;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 900;
    }

    .wins .stat-value {
        color: #2ecc71;
        text-shadow: 0 0 15px rgba(46, 204, 113, 0.5);
    }

    .losses .stat-value {
        color: #e74c3c;
        text-shadow: 0 0 15px rgba(231, 76, 60, 0.5);
    }

    @@media (max-width: 768px) {
        .main-layout {
            flex-direction: column;
            align-items: center;
        }
        
        .user-stats {
            width: 300px;
        }
    }
</style>

@code{
    private string UserIDdb = "1";
    private User? currentUser;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender){
            
            string AuthToken = await JS.InvokeAsync<string>(identifier: "CheckForCookie", new object[] {"UserID"});
            if (!Authentication.CheckForAuth(AuthToken))
            {
                Nav.NavigateTo(uri: "/Login");
            }
            else
            {
                UserAccessor UA = new UserAccessor();
                currentUser = UA.GetUserByAuth(AuthToken);
                StateHasChanged();
            }
        }
    }
    private void btnCreatorClick()
    {
        Nav.NavigateTo(uri: "/Creator/", forceLoad: true);
    }

    private void btnBattleClick()
    {
        Nav.NavigateTo(uri: "/Battle", forceLoad: true);
    }
}